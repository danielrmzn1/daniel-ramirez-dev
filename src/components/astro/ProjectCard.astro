---
import { Github, ExternalLink } from 'lucide-react';

interface Props {
  title: string;
  description: string;
  tags: string[];
  githubUrl?: string;
  liveUrl?: string;
  result?: string;
}

const { title, description, tags, githubUrl, liveUrl, result } = Astro.props;
---

<div class="card bg-base-100 shadow-sm border border-base-300 hover:border-primary/50 transition-all group">
  <div class="card-body p-6">
    <div class="flex justify-between items-start mb-2">
      <h3 class="card-title text-xl font-bold tracking-tight group-hover:text-primary transition-colors">
        {title}
      </h3>
      <div class="flex gap-2">
        {githubUrl && (
          <a href={githubUrl} target="_blank" rel="noopener noreferrer" class="btn btn-ghost btn-xs btn-circle" aria-label={`View GitHub repository for ${title}`}>
            <Github size={16} aria-hidden="true" />
          </a>
        )}
        {liveUrl && (
          <a href={liveUrl} target="_blank" rel="noopener noreferrer" class="btn btn-ghost btn-xs btn-circle" aria-label={`Visit live site for ${title}`}>
            <ExternalLink size={16} aria-hidden="true" />
          </a>
        )}
      </div>
    </div>
    
    <p class="text-base-content/70 text-sm mb-4 leading-relaxed text-pretty">
      {description}
    </p>

    {result && (
      <div class="bg-primary/5 border border-primary/10 rounded-lg p-3 mb-4">
        <p class="text-xs font-semibold text-primary uppercase tracking-wider mb-1">Impact</p>
        <p class="text-sm font-medium">{result}</p>
      </div>
    )}

    <div class="card-actions justify-start gap-1 mt-auto">
      {tags.map(tag => (
        <span class="badge badge-ghost badge-sm border-base-300 text-[10px] font-medium uppercase tracking-tight">
          {tag}
        </span>
      ))}
    </div>
  </div>
</div>
