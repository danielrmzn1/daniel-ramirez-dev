---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navbar from '../components/astro/Navbar.astro';
import Footer from '../components/astro/Footer.astro';
import ThemeController from '../components/react/ThemeController';
import ProjectCard from '../components/astro/ProjectCard.astro';
import { Image } from 'astro:assets';
import { Code2, Zap, Layout, ShieldCheck, Database, Server } from 'lucide-react';

const featuredProjects = [
  {
    title: "High-Performance Portfolio",
    description: "A developer portfolio focused on extreme performance and minimal client-side JS.",
    tags: ["Astro", "React", "Tailwind", "Vercel"],
    githubUrl: "https://github.com/danielrmzn1/daniel-ramirez-dev",
    result: "Achieved 100/100 Lighthouse score across all metrics."
  }
];

const techStack = [
  { name: "TypeScript", icon: Code2 },
  { name: "React", icon: Layout },
  { name: "Vite", icon: Zap },
  { name: "C# / .NET", icon: Server },
  { name: "SQL Server", icon: Database },
  { name: "Tailwind", icon: ShieldCheck }
];
---

<BaseLayout title="Daniel Ramirez | Senior Software Engineer">
	<Navbar slot="header">
		    <ThemeController client:only="react" slot="right" />	</Navbar>

  <!-- Background decorative elements -->
  <div class="fixed inset-0 -z-10 pointer-events-none opacity-20 dark:opacity-10 overflow-hidden">
    <div class="absolute top-0 right-0 w-[500px] h-[500px] bg-primary/30 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2"></div>
    <div class="absolute bottom-0 left-0 w-[500px] h-[500px] bg-secondary/30 rounded-full blur-3xl translate-y-1/2 -translate-x-1/2"></div>
  </div>

	<section class="min-h-[85vh] px-4 md:px-8 relative flex items-center">
		<div class="max-w-6xl mx-auto w-full py-20">
			<div class="grid md:grid-cols-12 gap-8 md:gap-12 lg:gap-16 items-center">

				<!-- Left: Text Content -->
				<div class="md:col-span-7 text-left order-2 md:order-1">
					<div class="relative">
						<div class="absolute -inset-4 bg-gradient-to-br from-primary/20 via-secondary/10 to-primary/5 rounded-3xl blur-3xl opacity-50"></div>
						<h1 class="relative text-5xl sm:text-6xl md:text-7xl lg:text-8xl font-black tracking-tighter mb-8 text-wrap-balance leading-[0.9]">
							BUILDING <br/>
							<span class="text-transparent bg-clip-text bg-gradient-to-r from-primary to-secondary">SCALABLE</span> <br/>
							WEB EXPERIENCES.
						</h1>
					</div>
					<p class="py-4 text-lg md:text-xl text-base-content/70 leading-relaxed max-w-xl text-pretty font-light">
						Senior Software Engineer with 8+ years of experience. I specialize in React, performance optimization, and bridging the gap between design systems and scalable backend architectures.
					</p>
					<div class="flex gap-4 mt-8">
						<a href="/projects" class="btn btn-primary btn-lg px-8 rounded-full">View Work</a>
						<a href="/contact" class="btn btn-outline btn-lg px-8 rounded-full">Get in Touch</a>
					</div>
				</div>

				<!-- Right: Avatar Card -->
				<div class="md:col-span-5 flex justify-center order-1 md:order-2">
					<div class="relative group">
						<!-- Animated gradient glow behind the image -->
						<div class="absolute -inset-4 bg-gradient-to-br from-primary/30 via-secondary/20 to-primary/10 rounded-3xl blur-2xl opacity-60 group-hover:opacity-90 transition-opacity duration-700 animate-pulse"></div>

						<!-- Glass card container -->
						<div class="relative bg-base-200/40 backdrop-blur-xl border border-base-content/10 rounded-3xl p-6 md:p-8 shadow-2xl">
							<!-- Avatar with Open to Work badge -->
							<div class="relative w-56 h-56 md:w-72 md:h-72 mx-auto">
								<Image
									src="https://github.com/danielrmzn1.png"
									alt="Daniel Ramirez"
									width={400}
									height={400}
									class="w-full h-full rounded-full object-cover group-hover:scale-105 transition-transform duration-700 ease-out neon-green"
									loading="eager"
								/>
								<!-- "Open to Work" text badge at the bottom -->
								<div class="absolute -bottom-2 left-1/2 -translate-x-1/2 bg-gradient-to-r from-emerald-600 to-emerald-500 text-white text-[10px] md:text-xs font-bold uppercase tracking-wider px-4 py-1.5 rounded-full shadow-lg whitespace-nowrap">
									Open to Work
								</div>
							</div>
							<!-- Name plate under avatar -->
							<div class="mt-6 text-center">
								<p class="font-black tracking-tight text-lg">Daniel Ramirez</p>
								<p class="text-xs font-semibold uppercase tracking-widest text-base-content/50 mt-1">Senior Software Engineer</p>
							</div>
						</div>
					</div>
				</div>

			</div>

			<!-- Tech Stack Bar -->
			<div class="mt-24 pt-10 border-t border-base-content/10">
				<p class="text-xs font-bold uppercase tracking-[0.2em] text-base-content/40 mb-8 text-center">Core Technologies</p>
				<div class="flex flex-wrap justify-center gap-8 md:gap-12 opacity-80">
					{techStack.map(tech => (
						<div class="flex items-center gap-2 group hover:opacity-100 transition-opacity hover:text-primary cursor-default">
							<tech.icon size={24} strokeWidth={1.5} />
							<span class="font-bold tracking-tight text-sm">{tech.name}</span>
						</div>
					))}
				</div>
			</div>
		</div>
	</section>

	<section class="py-24 px-4 md:px-8 bg-base-200/50 backdrop-blur-sm">
		<div class="max-w-6xl mx-auto">
      <div class="flex flex-col md:flex-row justify-between items-end mb-16 gap-6">
        <div class="max-w-lg">
          <h2 class="text-sm font-bold uppercase tracking-widest text-primary mb-2">Portfolio</h2>
          <h3 class="text-4xl font-black tracking-tight">Featured Work</h3>
        </div>
        <a href="/projects" class="btn btn-ghost group">
          View All Projects 
          <span class="group-hover:translate-x-1 transition-transform">â†’</span>
        </a>
      </div>

			<div class="grid md:grid-cols-2 gap-8">
				{featuredProjects.map(project => (
          <ProjectCard {...project} />
        ))}
			</div>
		</div>
	</section>

	<Footer slot="footer" />
</BaseLayout>
